{
    "compilerOptions": {
        "target": "es2019",
        "module": "ES2020",
        "lib": [
            "es2019"
        ],
        "moduleResolution": "node",
        "importHelpers": true,

        "noEmit": true,
        "sourceMap": true,
        
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        
        // TODO: Would improve code, but needs some work.
        "useUnknownInCatchVariables": false,
        "noUncheckedIndexedAccess": false,
        
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./support/**/*.ts",
        "./types/**/*.d.ts"
    ]
}
